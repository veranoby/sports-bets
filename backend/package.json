{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/backend/src/index.js",
    "start:dev": "ts-node src/index.ts",
    "db:init": "ts-node src/init-db.ts",
    "db:init:force": "ts-node src/init-db.ts --force",
    "db:test-users": "ts-node src/create-test-user.ts",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:status": "npm run migrate status",
    "migrate:init": "npm run migrate init",
    "debug-auth": "ts-node src/scripts/debug-auth.ts",
    "fix-users": "ts-node src/scripts/fix-test-users.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "sports",
    "betting",
    "streaming",
    "galleros"
  ],
  "author": "Sports Bets Team",
  "license": "PRIVATE",
